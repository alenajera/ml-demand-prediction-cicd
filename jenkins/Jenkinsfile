pipeline {
  agent any
  options { timestamps() }
  environment {
    IMAGE_NAME     = 'ml-demand-api'
    CONTAINER_NAME = 'ml_demand_test'
    TEST_URL       = 'http://host.docker.internal:5000/predict'
  }
  stages {
    stage('Prepare workspace (clean)') { steps { deleteDir() } }
    stage('Checkout') {
      steps {
        git url: 'https://github.com/alenajera/ml-demand-prediction-cicd.git',
            branch: 'main',
            credentialsId: 'github-pat'
      }
    }
    stage('Build Docker Image') {
      steps { sh 'docker build -t ml-demand-api -f docker/Dockerfile .' }
    }
    stage('Run Container for Testing') {
      steps {
        sh '''
          docker rm -f $CONTAINER_NAME >/dev/null 2>&1 || true
          docker run -d --name $CONTAINER_NAME -p 5000:5000 $IMAGE_NAME
        '''
      }
    }
    stage('Test API Endpoint') {
      steps {
        sh '''
          sleep 5
          echo "Calling $TEST_URL"
          curl -s -X POST $TEST_URL \
            -H "Content-Type: application/json" \
            -d '{"price":9.0,"ads_spent":750}'
        '''
      }
    }
    stage('Cleanup') {
      steps { sh 'docker stop $CONTAINER_NAME && docker rm $CONTAINER_NAME' }
    }
  }
  post {
    always {
      sh '''
        echo "--- Images top ---"
        docker image ls | head -n 10
        echo "--- Containers ---"
        docker ps -a | head -n 10
      '''
    }
  }
}